
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for the existence of the user document and then the role.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      // Admins can list all users
      allow list: if isAdmin();
      
      // Allow a user to create their OWN document during signup
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      
      // Allow an admin to create documents for other users if they are students
      allow create: if isAdmin() && request.resource.data.role == 'student';
      
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /users/{userId}/semesters/{semesterId} {
      // Students can read their own semesters
      // Admins can read any semester
      allow get, list: if isOwner(userId) || isAdmin();

      // Admins can create, update, and delete semesters for any user
      allow create, update, delete: if isAdmin();
    }
  }
}
