/**
 * @fileoverview Firestore Security Rules for GradeRight application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, ensuring that users can only
 * access their own data.  Data validation is relaxed to allow for rapid prototyping.
 *
 * Data Structure:
 * - `/users/{userId}`: Stores user profile information, accessible only by the user themselves.
 * - `/users/{userId}/semesters/{semesterId}`: Stores semester data for a specific user,
 *   accessible only by that user.
 *
 * Key Security Decisions:
 * - Users can only read and write their own user document.
 * - Users can only manage semesters within their own user document.
 * - Data validation is minimal during this prototype phase, focusing on authorization.
 *
 * Denormalization for Authorization:
 * - The `userId` is used in the path for both user profiles and semesters. This allows
 *   us to use the `isOwner(userId)` helper function to easily secure these resources.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile information.
     * @path /users/{userId}
     * @allow (read) User with ID 'user123' can read their own profile.
     *   - auth.uid: 'user123'
     * @allow (create) User with ID 'user123' can create their own profile.
     *   - auth.uid: 'user123'
     * @allow (update) User with ID 'user123' can update their own profile.
     *   - auth.uid: 'user123'
     * @allow (delete) User with ID 'user123' can delete their own profile.
     *   - auth.uid: 'user123'
     * @deny (read) User with ID 'user456' cannot read profile of user 'user123'.
     *   - auth.uid: 'user456'
     * @deny (create) User with ID 'user456' cannot create profile for user 'user123'.
     *   - auth.uid: 'user456'
     * @deny (update) User with ID 'user456' cannot update profile of user 'user123'.
     *   - auth.uid: 'user456'
     * @deny (delete) User with ID 'user456' cannot delete profile of user 'user123'.
     *   - auth.uid: 'user456'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to semester data for a specific user.
     * @path /users/{userId}/semesters/{semesterId}
     * @allow (read) User with ID 'user123' can read their own semester data.
     *   - auth.uid: 'user123'
     * @allow (create) User with ID 'user123' can create semester data under their user ID.
     *   - auth.uid: 'user123'
     * @allow (update) User with ID 'user123' can update their own semester data.
     *   - auth.uid: 'user123'
     * @allow (delete) User with ID 'user123' can delete their own semester data.
     *   - auth.uid: 'user123'
     * @deny (read) User with ID 'user456' cannot read semester data of user 'user123'.
     *   - auth.uid: 'user456'
     * @deny (create) User with ID 'user456' cannot create semester data under user 'user123'.
     *   - auth.uid: 'user456'
     * @deny (update) User with ID 'user456' cannot update semester data of user 'user123'.
     *   - auth.uid: 'user456'
     * @deny (delete) User with ID 'user456' cannot delete semester data of user 'user123'.
     *   - auth.uid: 'user456'
     * @principle Enforces document ownership for all operations within a user's data tree.
     */
    match /users/{userId}/semesters/{semesterId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}