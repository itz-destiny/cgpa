{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the GradeRight system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "username": {
          "type": "string",
          "description": "The username of the user."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "The first name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "The last name of the user."
        },
        "role": {
            "type": "string",
            "description": "The role of the user within the system.",
            "enum": ["student", "faculty", "admin"]
        }
      },
      "required": [
        "id",
        "email",
        "role"
      ]
    },
    "Course": {
      "title": "Course",
      "description": "A single course within a semester",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "units": {
          "type": "number"
        },
        "grade": {
          "type": "string",
          "enum": ["A", "B", "C", "D", "F", ""]
        }
      },
      "required": ["id", "name", "units", "grade"]
    },
    "Semester": {
      "title": "Semester",
      "description": "A semester containing a list of courses",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "courses": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Course"
          }
        }
      },
      "required": ["id", "name", "courses"]
    }
  },
  "auth": {
    "providers": [
      "email"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/semesters/{semesterId}": {
      "schema": {
        "$ref": "#/entities/Semester"
      },
      "description": "Stores semesters for a specific user."
    }
  }
}
